<div class="cart_area_list">
  <div class="cart_area_content">
    <div class="row" id="<%= product.id %>">
      <div class="span3 cart_remove">
        <p><input type="checkbox" value="product1" name="product1" disabled="disabled" title="Under development"></p>
      </div>
      <div class="span2 cart_image">
        <%= image_tag product.image_url(:small) %>
      </div>
      <div class="span2 cart_product_name">
        <p><%= product.name %></p>
      </div>
      <div class="span2 cart_quantity">
        <p>
          <%= quantity %>
          <!--select class="qnt">
            <option value="1">0</option>
            <option value="2">1</option>
            <option value="3">2</option>
            <option value="4">3</option>
            <option value="5">4</option>
