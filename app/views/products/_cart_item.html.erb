            <option value="7">6</option>
            <option value="8">7</option>
            <option value="9">8</option>
            <option value="10">9</option>
          </select-->
        </p>
      </div>
      <div class="span3 cart_total_price">
        <p><%= number_to_currency product.price*quantity %></p>
      </div>
    </div>
  </div>
</div>