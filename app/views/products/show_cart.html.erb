<div class="container main">
  <div class="checkout_area">
    <h2 class="title-wrap">
      Shopping Cart
    </h2>
    <div class="line"></div>

    <div class="cart_area">

      <div class="cart_area_heading">
        <div class="row">
          <div class="span3 cart_remove">
            <p>Remove</p>
          </div>
          <div class="span2 cart_image">
            <p>Image</p>
          </div>
          <div class="span2 cart_product_name">
            <p>Product Name</p>
          </div>
          <div class="span2 cart_quantity">
            <p>Quantity</p>
          </div>
          <div class="span3 cart_total_price">
            <p>Total Price</p>
          </div>
        </div>
      </div>

      <% @products.each do |product, quantity| %>
        <%= render partial: 'cart_item', locals: {product: product, quantity: quantity} %>
      <% end %>

    </div>
  </div>

  <div class="row total_cost">
    <div class="span6 gap_section">

    </div>
    <div class="span6 total_cost_section">
      <div class="total_cart_cost">
        <div class="cart_level">
          <p><span>total:</span></p>
        </div>
        <div class="cart_amount">
          <p><span><%= number_to_currency @cart_total %></span></p>
        </div>
      </div>
      <div class="total_cart_cost_btn">
        <a href="<%= clear_cart_path %>" data-method="delete"><button class="checkout">clear cart</button></a>
        <a href="<%= orders_path %>" data-method="post"><button class="continue">order</button></a>
      </div>
    </div>
  </div>
</div>